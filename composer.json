{
    "name": "takeokunn/phpswitch",
    "description": "PHPSwitch API library",
    "license": "MIT",
    "bin": [
        "bin/phpswitch"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "corneltek/curlkit": "^1.0.11",
        "ext-simplexml": "*",
        "symfony/yaml": "^5.4",
        "corneltek/cliframework": "^4.2",
        "corneltek/pearx": "^1.3"
    },
    "require-dev": {
        "php-vcr/php-vcr": "^1.5.4",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "stan": [
            "vendor/bin/phpstan analyse --memory-limit=-1 \".\""
        ],
        "lint:cs": [
            "vendor/bin/phpcs --parallel=8 src/ tests/"
        ],
        "lint:rector": [
            "vendor/bin/rector process"
        ]
    },
    "autoload": {
        "psr-4": {
            "PhpSwitch\\": "src/PhpSwitch/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpSwitch\\Tests\\": "tests/PhpSwitch/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
